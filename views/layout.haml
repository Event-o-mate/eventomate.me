%html
  %head 
    %meta{:charset => "utf-8"} 
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, shrink-to-fit=no"}
    %title Event-O-Mate
    
    /Load Pacifico font
    %link{:rel => "stylesheet", :href => "https://fonts.googleapis.com/css?family=Pacifico"}

    /Bootstrap
    / %link{:rel => "stylesheet", :href => "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.5/css/bootstrap.min.css"}
    %link{:rel => "stylesheet", :href => "css/bootstrap.css"}
    %link{:rel => "stylesheet", :href => "css/autocomplete.css"}
    %link{:rel => "stylesheet", :href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"}
    
    /Include main css file
    = css :main

    /Include used libraries css files
    = css :libs

  %body{"ng-app" => "EventoMate"}
    
    /navigation bar
    = html "menu"

    /main content
    = yield
    
    / rotating bg
    %div{:class => "rotoBg-container"} 
      %object{:class => "rotoBg", :type => "image/svg+xml", :data => "img/rotoBg.svg"}
        Your browser does not support SVG

  %footer
    /JQuery
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"}

    /Momnet.js
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js"}
    
    /AngularJS
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular.js"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular-route.js"}

    /Angular libs
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/angular-resource/1.5.8/angular-resource.min.js"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular-messages.min.js"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular-cookies.js"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/ngStorage/0.3.6/ngStorage.min.js"}
    
    /Google maps API
    //%script{:src => "https://maps.googleapis.com/maps/api/js?sensor=false"}
    %script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyC20xo5vUPz42LM5lG0GOhdwjniQR7pUu0&libraries=places&"}
    
    /Boostrap
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"}
    
    /Include used libraries
    = js :libs

    /Include angular app files
    = js :ngApp

